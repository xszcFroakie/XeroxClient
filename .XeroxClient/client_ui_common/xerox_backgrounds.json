      }
    ]
  },

  "animated_background": {
    "type": "panel",
    "propagate_alpha": true,
    "clips_children": true,
    "controls": [
      {
        "某些人别盗了你妈死了恶不恶心啊 盗没盗自己心里没点b数吗@xc_backgrounds.background_content": {}
      }
    ]
  }*/
}

{
  "namespace": "progress_animation",
  "dot_draw_to_line": {
    "anim_type": "size",
    "easing": "in_cubic",
    "duration": 0.5,
    "to": [40, 8],
    "from": [8, 8],
    "next": "@progress_animation.line_draw_to_dot"
  },
  "line_draw_to_dot": {
    "anim_type": "size",
    "easing": "out_cubic",
    "duration": 0.5,
    "from": [40, 8],
    "to": [8, 8],
    "next": "@progress_animation.dot_draw_to_line"
  },

  "dot_left_to_right": {
    "anim_type": "offset",
    "easing": "in_out_cubic",
    "duration": 1.0,
    "to": ["100%-4px", 0],
    "from": [4, 0],
    "next": "@progress_animation.dot_right_to_left"
  },

  "dot_right_to_left": {
    "anim_type": "offset",
    "easing": "in_out_cubic",
    "duration": 1.0,
    "from": ["100%-4px", 0],
    "to": [4, 0],
    "next": "@progress_animation.dot_left_to_right"
  },

  "dot_expand_size": {
    "anim_type": "size",
    "easing": "out_quad",
    "duration": 1.0,
    "from": [10, 8],
    "to": ["90%", 8],
    "next": "@progress_animation.dot_expand_size_w0"
  },

  "dot_expand_size_w0": {
    "anim_type": "wait",
    "duration": 0.0,
    "next": "@progress_animation.dot_expand_size_w"
  },

  "dot_expand_size_w": {
    "anim_type": "wait",
    "duration": 1.0,
    "next": "@progress_animation.dot_expand_size"
  },

  "dot_expand_alpha": {
    "anim_type": "alpha",
    "easing": "out_quad",
    "duration": 0.8,
    "from": 1.0,
    "to": 0.0,
    "next": "@progress_animation.dot_expand_alpha_w0"
  },

  "dot_expand_alpha_w0": {
    "anim_type": "wait",
    "duration": 0.2,
    "next": "@progress_animation.dot_expand_alpha_w"
  },

  "dot_expand_alpha_w": {
    "anim_type": "wait",
    "duration": 1.0,
    "next": "@progress_animation.dot_expand_alpha"
  }
}

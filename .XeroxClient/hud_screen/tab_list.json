{
  "namespace": "xc_modern_tab_list",

  "tab_list": {
    "type": "button",
    "pressed_control": "tab_list_content",
    "button_mappings": [
      {
        "from_button_id": "button.scoreboard",
        "to_button_id": "button.scoreboard",
        "mapping_type": "global",
        "consume_event": false
      }
    ],
    "ignored": "$touch",
    "controls": [
      {
        "tab_list_content": {
          "type": "panel",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [0, 10],
          "size": [400, 156],
          "clips_children": true,
          "controls": [
            {
              "tab_list_grid_@xc_modern_tab_list.single_list_grid": {
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "grid_item_template": "xc_modern_tab_list.tab_list_grid",
                "size": ["100%", "100%c"]
              }
            }
          ]
        }
      }
    ]
  },

  "tab_list_grid": {
    "type": "panel",
    "size": ["100%", 156],
    "controls": [
      {
        "tab_list_grid_item": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": ["100%c", "100%"],
          "controls": [
            {
              "stack_1": {
                "type": "panel",
                "size": ["100%c", 156],
                "clips_children": true,
                "controls": [
                  {
                    "1@xc_modern_tab_list.single_list_grid": {
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle"
                    }
                  }
                ]
              }
            },
            {
              "stack_2": {
                "type": "panel",
                "size": ["100%c", 156],
                "clips_children": true,
                "controls": [
                  {
                    "2@xc_modern_tab_list.single_list_grid": {
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "offset": [0, -156]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#collection_index",
                    "binding_type": "collection",
                    "binding_collection_name": "players_collection"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#collection_index > 11)",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "stack_3": {
                "type": "panel",
                "size": ["100%c", 156],
                "clips_children": true,
                "controls": [
                  {
                    "3@xc_modern_tab_list.single_list_grid": {
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "offset": [0, -312]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#collection_index",
                    "binding_type": "collection",
                    "binding_collection_name": "players_collection"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#collection_index > 23)",
                    "target_property_name": "#visible"
                  }
                ]
              }
            },
            {
              "stack_4": {
                "type": "panel",
                "size": ["100%c", 156],
                "clips_children": true,
                "controls": [
                  {
                    "4@xc_modern_tab_list.single_list_grid": {
                      "anchor_from": "top_middle",
                      "anchor_to": "top_middle",
                      "offset": [0, -468]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#collection_index",
                    "binding_type": "collection",
                    "binding_collection_name": "players_collection"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#collection_index > 35)",
                    "target_property_name": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "single_list_grid": {
    "type": "grid",
    "size": [100, "100%c"],
    "grid_item_template": "xc_modern_tab_list.tab_list_grid_item",
    "collection_name": "players_collection",
    "grid_dimension_binding": "#players_grid_dimension",
    "bindings": [
      {
        "binding_name": "#players_grid_dimension"
      }
    ]
  },

  "tab_list_grid_item": {
    "type": "panel",
    "size": [100, 13],
    "layer": 200,
    "controls": [
      {
        "background": {
          "type": "image",
          "size": ["100% - 1px", 12],
          "alpha": 0.3,
          "layer": 2,
          "texture": "textures/XeroxClient/rounded_corner/all2x",
          "color": "$xeroxclient_ui_theme_menu_background_color"
        }
      },
      {
        "main": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": ["100% - 2px", 12],
          "layer": 3,
          "bindings": [
            {
              "binding_name": "#collection_index",
              "binding_type": "collection",
              "binding_collection_name": "players_collection"
            }
          ],
          "controls": [
            {
              "player_picture": {
                "type": "panel",
                "layer": 11,
                "size": [12, 12],
                "controls": [
                  {
                    "player_gamer_pic@pause.player_gamer_pic": {
                      "size": [10, 10],
                      "controls": []
                    }
                  },
                  {
                    "player_local_icon@pause.player_local_icon": {
                      "size": [10, 10]
                    }
                  }
                ]
              }
            },
            {
              "player_gamertag": {
                "type": "panel",
                "size": ["fill", 12],
                "controls": [
                  {
                    "gamertag_text": {
                      "type": "label",
                      "text": "#gamertag",
                      "anchor_from": "left_middle",
                      "anchor_to": "left_middle",
                      "size": ["default", "default"],
                      "font_type": "$global_font_type",
                      "backup_font_type": "$global_font_type_backup",
                      "layer": 11,
                      "bindings": [
                        {
                          "binding_name": "#gamertag",
                          "binding_type": "collection",
                          "binding_collection_name": "players_collection"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}

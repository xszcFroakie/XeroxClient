{
  "namespace": "xc_modern_chat",

  "chat_label@xerox_lib.hud_l": {
    "layer": 31,
    "text": "#text",
    "size": ["100%-2px", "default"],
    "shadow": true,
    "localize": false,
    "color": "$chat_text_color",
    //"font_scale_factor": 0.9,
    "bindings": [
      {
        "binding_name": "#chat_text",
        "binding_name_override": "#text",
        "binding_type": "collection",
        "binding_collection_name": "chat_text_grid",
        "binding_condition": "once"
      }
    ]
  },

  "chat_grid_item@xerox_lib.p": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "bindings": [
      {
        "binding_name": "(not #on_new_death_screen)",
        "binding_name_override": "#visible"
      }
    ],
    "anims": ["@xc_modern_chat.chat_start_anim"],
    "controls": [
      {
        "chat_msg@xerox_lib.p": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": ["100%", "100%c"],
          "propagate_alpha": true,
          "alpha": "@xc_modern_chat.chat_bg_start_anim",
          "anims": ["@xc_modern_chat.chat_wait_anim_1"],
          "controls": [
            {
              "chat_content@xerox_lib.p": {
                "layer": 1,
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "size": ["100%", "100%c"],
                "offset": "@xc_modern_chat.chat_offset_start_anim",
                "controls": [
                  {
                    "chat_text@xc_modern_chat.chat_label": {
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "offset": [2, 0]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "modern_chat_panel@xerox_lib.p": {
    "layer": 3,
    "offset": [1, -26],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "controls": [
      {
        "stack_panel@xerox_lib.vsp": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "factory": {
            "name": "chat_item_factory",
            "max_children_size": 12,
            "control_ids": {
              "chat_item": "chat_item@xc_modern_chat.chat_grid_item"
            }
          }
        }
      }
    ]
  }
}

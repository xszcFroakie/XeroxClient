    "from": -0.25,
    "to": 1.0,
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  //--------------------------

  "bg_out_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.3,
    "to": 0.0,
    "from": 1.0,

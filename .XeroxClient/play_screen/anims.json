    "duration": 0.3,
    "to": -0.25,
    "from": 1.0,
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "tab_content_enter_alpha_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.6,
    "from": -0.25,
    "to": 1.0,
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end"
  },

  "tab_content_enter_alpha_animation_pop": {
    "anim_type": "alpha",
    "easing": "out_cubic",

{
  "namespace": "play_animation",

  //--------------------------

  "tab_out_alpha_animation@play_animation.tab_enter_alpha_animation": {
    "duration": 0.6,
    "from": 1.0,
    "to": -0.25,
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "tab_out_alpha_animation_pop@play_animation.tab_enter_alpha_animation": {
    "duration": 0.6,
    "from": 1.0,
    "to": -0.25,
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "tab_enter_alpha_wait": {
    "anim_type": "alpha",
    "duration": "$wait_dura",
    "from": -0.25,
    "to": -0.25,
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end",
    "next": "@play_animation.tab_enter_alpha_animation"
  },

  "tab_enter_alpha_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.6,
    "from": -0.25,
    "to": 1.0
  },

  "tab_enter_alpha_animation_pop@play_animation.tab_enter_alpha_animation": {
    "duration": 0.6,
    "from": -0.25,
    "to": 1.0,
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  "tab_out_offset_animation@play_animation.tab_enter_offset_animation": {
    "duration": 0.6,
    "from": "$offset_1",
    "to": "$offset_2",
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "tab_out_offset_animation_pop@play_animation.tab_enter_offset_animation": {
    "duration": 0.6,
    "from": "$offset_1",
    "to": "$offset_2",
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "tab_enter_offset_wait": {
    "anim_type": "offset",
    "duration": "$wait_dura",
    "from": "$offset_2",
    "to": "$offset_2",
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end",
    "next": "@play_animation.tab_enter_offset_animation"
  },

  "tab_enter_offset_animation": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.6,
    "from": "$offset_2",
    "to": "$offset_1"
  },

  "tab_enter_offset_animation_pop@play_animation.tab_enter_offset_animation": {
    "duration": 0.6,
    "from": "$offset_2",
    "to": "$offset_1",
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  //--------------------------

  "gradient_bg_out_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.6,
    "to": -0.25,

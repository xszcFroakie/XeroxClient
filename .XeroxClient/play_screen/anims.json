  },

  "tab_content_out_alpha_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.3,
    "to": -0.25,
    "from": 1.0,
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "tab_content_out_alpha_animation_pop": {

{
  "namespace": "pasue_animation",

  //--------------------------

  "main_menu_alpha_out_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.4,
    "to": -0.25,
    "from": 1.0,
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "main_menu_alpha_out_animation_pop": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.4,
    "to": -0.25,
    "from": 1.0,
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "main_menu_alpha_enter_animation": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.4,
    "from": -0.25,
    "to": 1.0,
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end"
  },

  "main_menu_alpha_enter_animation_pop": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 0.4,
    "from": -0.25,
    "to": 1.0,
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  "main_menu_offset_out_animation": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.4,
    "to": [0, "-5%"],
    "from": [0, 0],
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "main_menu_offset_out_animation_pop": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.4,
    "to": [0, "-5%"],
    "from": [0, 0],
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "main_menu_offset_enter_animation": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.4,
    "from": [0, "-5%"],
    "to": [0, 0],
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end"
  },

  "main_menu_offset_enter_animation_pop": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.4,
    "from": [0, "-5%"],
    "to": [0, 0],
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  //--------------------------

  "player_list_reset0": {
    "anim_type": "size",
    "duration": 0.0,
    "from": [190, 0],
    "to": [190, 0]
  },

  "player_list_reset1": {
    "anim_type": "size",
    "duration": 0.0,
    "from": [190, 210],
    "to": [190, 210]
  },

  "player_list_open": {
    "anim_type": "size",
    "easing": "out_cubic",
    "duration": 0.25,
    "to": [190, 210],
    "from": [190, 0],
    "play_event": "button.player_list_open"
  },

  "player_list_close": {
    "anim_type": "size",
    "easing": "out_cubic",
    "duration": 0.25,
    "from": [190, 210],
    "to": [190, 0],
    "play_event": "button.player_list_close"
  },

  "player_list_open_button_show": {
    "anim_type": "size",
    "duration": 0.0,
    "to": ["90%", 20],
    "from": [0, 0],
    "play_event": "button.player_list_close"
  },

  "player_list_close_button_show": {
    "anim_type": "size",
    "duration": 0.0,
    "to": ["90%", 20],
    "from": [0, 0],
    "play_event": "button.player_list_open"
  },

  "player_list_open_button_hide": {
    "anim_type": "size",
    "duration": 0.0,
    "to": [0, 0],
    "from": ["90%", 20],
    "play_event": "button.player_list_open"
  },

  "player_list_close_button_hide": {
    "anim_type": "size",
    "duration": 0.0,
    "to": [0, 0],
    "from": ["90%", 20],
    "play_event": "button.player_list_close"
  }
}

        "center_panel": {
          "type": "panel",
          "size": ["100%c", "100%c"],
          "controls": [
            {
              "grindstone_panel@xc_modern_grindstone_screen.grindstone_panel": {}
            },
            {
              "0size_panel": {
                "type": "panel",
                "size": [0, 0],
                "anchor_from": "bottom_right",
                "anchor_to": "bottom_right",
                "offset": [0, "-0.6024096386%"],
                //"ignored": "(not $touch)",
                "controls": [
                  {
                    "mode_selection@container:classic_common.mode_selection_panel": {
                      "anchor_from": "bottom_right",
                      "anchor_to": "bottom_left"

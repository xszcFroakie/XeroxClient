            },
            {
              "binding_type": "view",
              "source_property_name": "('\n§7Item ID AUX: §r' + #item_id_aux + '\n§7Item ID: §r' + (#item_id_aux / 65536) + '\n§7Charged Item: §r' + #charged_item + '\n§7Item Custom Color: §r' + #item_custom_color + '\n§7Item Pickup Time: §r' + #item_pickup_time)",
              "target_property_name": "#debug_info"
            }
          ]
        }

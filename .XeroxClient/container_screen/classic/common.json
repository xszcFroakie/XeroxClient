          "type": "panel",
          "size": ["100%cm", "200%c"],
          "controls": [
            {
              "dura_main": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": ["100%c", "100%cm"],
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "controls": [

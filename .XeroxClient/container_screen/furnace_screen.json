                      "layer": 1,
                      "size": ["111.1111111111%c", "100%x"],
                      "controls": [
                        {
                          "fuel_grid@xc_modern_container:classic_common.container_item": {
                            "$item_collection_name": "furnace_fuel_items"
                          }

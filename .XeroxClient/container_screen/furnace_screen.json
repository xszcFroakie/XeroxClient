            {
              "inv_and_hotbar@xc_modern_container:classic_common.inventory_and_hotbar": {
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [0, "1.1764705882%"]
              }
            }
          ]
        }
      }
    ]

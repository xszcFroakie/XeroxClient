                          "creative_label": {
                            "type": "label",
                            "size": ["100%-2px", "default"],
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "offset": [2, 0],
                            "layer": 2,
                            "font_type": "$global_font_type",
                            "backup_font_type": "$global_font_type_backup",
                            "text": "#tab_label_text",
                            "bindings": [
                              {
                                "binding_name": "#tab_label_text"
                              }
                            ]
                          }
                        },
                        {
                          "filter_toggle@common_toggles.a_rc_8x_image": {
                            "$xeroxclient_button_alpha_default": 0.3,

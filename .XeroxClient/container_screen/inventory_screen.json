  "recipe_book_panel": {
    "type": "stack_panel",
    "size": [146, "100%-2px"],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [-1, 0],
    "animation_reset_name": "screen_animation_reset",
    "anims": [
      "@container:classic_animation.recipe_book_enter",
      "@container:classic_animation.recipe_book_out"

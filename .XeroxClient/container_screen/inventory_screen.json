          "alpha": 0.3,
          "layer": 0,
          "size": ["100%", 22],
          "clips_children": true,
          "controls": [
            {
              "stack": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": ["100%-2px", "100%-2px"],
                "$toggle_group_default_selected": "$construction_index",
                "$toggle_binding_type": "global",
                "$toggle_name": "navigation_tab",
                "$toggle_focus_enabled": false,
                "$xeroxclient_button_alpha_default": 0.0,
                "controls": [
                  {
                    "con_tab@common_tabs.a_rc_8x": {
                      "size": ["fill", 20],
                      "$tab_content": "xc_modern_inventory_screen.construction_icon",
                      "$tab_view_binding_name": "construction_tab_toggle",
                      "$toggle_group_forced_index": "$construction_index",
                      "$toggle_state_binding_name": "#is_left_tab_construct"
                    }
                  },
                  {
                    "padding0": {
                      "type": "panel",
                      "size": [1, 0]
                    }
                  },
                  {
                    "equ_tab@common_tabs.a_rc_8x": {
                      "size": ["fill", 20],
                      "$tab_content": "xc_modern_inventory_screen.equipment_icon",
                      "$tab_view_binding_name": "equipment_tab_toggle",
                      "$toggle_group_forced_index": "$equipment_index",
                      "$toggle_state_binding_name": "#is_left_tab_equipment"
                    }
                  },
                  {
                    "padding1": {
                      "type": "panel",
                      "size": [1, 0]
                    }
                  },
                  {
                    "ite_tab@common_tabs.a_rc_8x": {
                      "size": ["fill", 20],
                      "$tab_content": "xc_modern_inventory_screen.miscellaneous_icon",
                      "$tab_view_binding_name": "items_tab_toggle",
                      "$toggle_group_forced_index": "$items_index",

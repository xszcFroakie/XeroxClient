        "offline_acc_text": {
          "type": "label",
          "size": ["default", 10],
          "font_type": "$global_font_type",
          "backup_font_type": "$global_font_type_backup",
          "text": "Offline Account",
          "layer": 11
        }
      }
    ]
  },

  "main_content": {
    "type": "panel",
    "propagate_alpha": true,

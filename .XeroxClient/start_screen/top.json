{
  "namespace": "xc_modern_start:top",

  "player_info": {
    "type": "image",
    "size": ["100%c+4px", 20],
    "color": "$xeroxclient_ui_theme_menu_background_color",
    "texture": "textures/XeroxClient/rounded_corner/all8x",
    "alpha": 0.4,
    "controls": [{ "@xc_modern_start:top.player_info_content": {} }],
    "bindings": [
      {
        "binding_name": "(not #sign_in_visible)",
        "binding_name_override": "#visible"
      }
    ]
  },

  "player_info_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "layer": 12,
    "size": ["100%c", 16],
    "controls": [
      {
        "gamerpic_panel": {
          "type": "panel",
          "size": [20, 16],
          "controls": [
            {
              "gamerpic_panel": {
                "type": "custom",
                "renderer": "profile_image_renderer",
                "size": [16, 16],
                "layer": 12,
                "bindings": [
                  {
                    "binding_name": "#profile_image_options"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "welcome": {
          "type": "panel",
          "size": ["100%c", 16],
          "controls": [
            { "welcome_text@xc_modern_start:top.player_name_text": {} }
          ]
        }
      }
    ]
  },

  "player_name_text": {
    "type": "label",
    "layer": 12,
    "text": "#text",
    "size": ["default", "default"],
    "max_size": ["default", "default"],
    //"offset": [0, -1],
    "font_type": "$global_font_type",
    "backup_font_type": "$global_font_type_backup",
    "bindings": [
      {
        "binding_name": "#playername"
      },
      {
        "binding_type": "view",
        "source_property_name": "('Hello, ' + #playername)",
        "target_property_name": "#text"
      }
    ]
  }
}

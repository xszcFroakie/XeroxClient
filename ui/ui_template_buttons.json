{
  "namespace": "common_buttons",

  "button_image": {
    "type": "image",
    "layer": 1,
    "$button_image_bindings|default": [],
    "bindings": "$button_image_bindings"
  },

  "locked_button_image": {
    "$xeroxclient_ui_control|default": false,

    "alpha": "$alpha",
    "color": "$color",
    "$alpha": 1,
    "$color": [],
    "$xeroxclient_button_alpha|default": "",
    "$xeroxclient_button_color|default": [],
    "variables": {
      "requires": "$xeroxclient_ui_control",
      "$alpha": "$xeroxclient_button_alpha",
      "$color": "$xeroxclient_button_color"
    }
  },

  "light_button_assets": {
    //"$default_button_texture|default": "textures/XeroxClient/White",
    //"$hover_button_texture|default": "textures/XeroxClient/White",
    //"$pressed_button_texture|default": "textures/XeroxClient/White",
    //"$locked_button_texture|default": "textures/XeroxClient/White",

    "$xeroxclient_button_alpha_default|default": "$xeroxclient_ui_theme_button_default_alpha",
    "$xeroxclient_button_alpha_hover|default": "$xeroxclient_ui_theme_button_hover_alpha",
    "$xeroxclient_button_alpha_pressed|default": "$xeroxclient_ui_theme_button_pressed_alpha",
    "$xeroxclient_button_alpha_locked|default": "$xeroxclient_ui_theme_button_locked_alpha",

    "$xeroxclient_button_color_default|default": "$xeroxclient_ui_theme_button_default_color",
    "$xeroxclient_button_color_hover|default": "$xeroxclient_ui_theme_button_hover_color",
    "$xeroxclient_button_color_pressed|default": "$xeroxclient_ui_theme_button_pressed_color",
    "$xeroxclient_button_color_locked|default": "$xeroxclient_ui_theme_button_locked_color",

    "$xeroxclient_button_content_offset_default|default": "$xeroxclient_ui_theme_button_content_default_offset",
    "$xeroxclient_button_content_offset_hover|default": "$xeroxclient_ui_theme_button_content_hover_offset",
    "$xeroxclient_button_content_offset_pressed|default": "$xeroxclient_ui_theme_button_content_pressed_offset",

    "$xeroxclient_button_text_color_default|default": "$xeroxclient_ui_theme_button_text_default_color",
    "$xeroxclient_button_text_color_hover|default": "$xeroxclient_ui_theme_button_text_hover_color",
    "$xeroxclient_button_text_color_pressed|default": "$xeroxclient_ui_theme_button_text_pressed_color",
    "$xeroxclient_button_text_color_locked|default": "$xeroxclient_ui_theme_button_text_locked_color",

    "locked_control": "locked"
  },

  "dark_button_assets": {
    //"$default_button_texture|default": "textures/XeroxClient/White",
    //"$hover_button_texture|default": "textures/XeroxClient/White",
    //"$pressed_button_texture|default": "textures/XeroxClient/White",
    //"$locked_button_texture|default": "textures/XeroxClient/White",

    "$xeroxclient_button_alpha_default|default": "$xeroxclient_ui_theme_button_default_alpha",
    "$xeroxclient_button_alpha_hover|default": "$xeroxclient_ui_theme_button_hover_alpha",
    "$xeroxclient_button_alpha_pressed|default": "$xeroxclient_ui_theme_button_pressed_alpha",
    "$xeroxclient_button_alpha_locked|default": "$xeroxclient_ui_theme_button_locked_alpha",

    "$xeroxclient_button_color_default|default": "$xeroxclient_ui_theme_button_default_color",
    "$xeroxclient_button_color_hover|default": "$xeroxclient_ui_theme_button_hover_color",
    "$xeroxclient_button_color_pressed|default": "$xeroxclient_ui_theme_button_pressed_color",
    "$xeroxclient_button_color_locked|default": "$xeroxclient_ui_theme_button_locked_color",

    "$xeroxclient_button_content_offset_default": "$xeroxclient_ui_theme_button_content_default_offset",
    "$xeroxclient_button_content_offset_hover": "$xeroxclient_ui_theme_button_content_hover_offset",
    "$xeroxclient_button_content_offset_pressed": "$xeroxclient_ui_theme_button_content_pressed_offset",

    "$xeroxclient_button_text_color_default": "$xeroxclient_ui_theme_button_text_default_color",
    "$xeroxclient_button_text_color_hover": "$xeroxclient_ui_theme_button_text_hover_color",
    "$xeroxclient_button_text_color_pressed": "$xeroxclient_ui_theme_button_text_pressed_color",
    "$xeroxclient_button_text_color_locked": "$xeroxclient_ui_theme_button_text_locked_color",

    "locked_control": "locked"
  },

  "focus_border": {},

  "new_ui_button_panel/$button_image": {
    "$xeroxclient_ui_control|default": false,

    "alpha": "$alpha",
    "color": "$color",
    "$alpha": 1,
    "$color": "$button_image_color",
    "$xeroxclient_button_alpha|default": 0.45,
    "$xeroxclient_button_color|default": [],
    "variables": {
      "requires": "$xeroxclient_ui_control",
      "$alpha": "$xeroxclient_button_alpha",
      "$color": "$xeroxclient_button_color"
    },
    "anims": "$xeroxclient_button_hover_anims",
    "$xeroxclient_button_hover_anims|default": [],
    "animation_reset_name": "('button.xeroxClient.' + $pressed_button_name)",
    "disable_anim_fast_forward": true,
    "$pressed_button_name|default": ""
  },

  "new_ui_button_panel/border": {
    "$xeroxclient_ui_control|default": false,

    "alpha": "$alpha",
    "$alpha": 1,
    "variables": {
      "requires": "$xeroxclient_ui_control",
      "$alpha": 0
    }
  },

  "light_text_button/default": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_default",
    "$xeroxclient_button_color": "$xeroxclient_button_color_default",
    "$button_offset": "$xeroxclient_button_content_offset_default",
    "$xeroxclient_button_text_color": "$xeroxclient_button_text_color_default",
    "$xeroxclient_button_hover_anims": [
      "@common_buttons.default_alpha",
      "@common_buttons.default_color"
    ],
    "$ignored_default_anims|default": true
  },

  "light_text_button/hover": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_hover",
    "$xeroxclient_button_color": "$xeroxclient_button_color_hover",
    "$button_offset": "$xeroxclient_button_content_offset_hover",
    "$xeroxclient_button_text_color": "$xeroxclient_button_text_color_hover",
    "$xeroxclient_button_hover_anims": [
      "@common_buttons.hover_alpha",
      "@common_buttons.hover_color"
    ],
    "$ignored_hover_anims|default": true
  },

  "light_text_button/pressed": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_pressed",
    "$xeroxclient_button_color": "$xeroxclient_button_color_pressed",
    "$button_offset": "$xeroxclient_button_content_offset_pressed",
    "$xeroxclient_button_text_color": "$xeroxclient_button_text_color_pressed"
  },

  "light_text_button/locked": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_locked",
    "$xeroxclient_button_color": "$xeroxclient_button_color_locked",
    "$xeroxclient_button_text_color": "$xeroxclient_button_text_color_locked"
  },

  "light_text_button": {
    "$button_hover_tip|default": false,
    "$button_hover_tip_text|default": "xc.tip.press2x",
    "$button_hover_tip_text_binding|default": [],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "hover_tip@xc_modern_container:classic_common.custom_hover_text": {
              "$hover_text": "$button_hover_tip_text",
              "$hover_text_bindings": "$button_hover_tip_text_binding",
              "ignored": "(not $button_hover_tip)"
            }
          }
        ]
      }
    ]
  },

  "new_ui_binding_button_label": {
    "$xeroxclient_ui_control|default": false,

    "color": "$color",
    "$color": "$text_color",
    "$xeroxclient_button_text_color|default": [1.0, 1.0, 1.0],
    "variables": {
      "requires": "$xeroxclient_ui_control",
      "$color": "$xeroxclient_button_text_color",
      "$font_type": "$global_font_type"
    },
    "font_type": "$font_type",
    "backup_font_type": "$global_font_type_backup"
  },

  "light_content_button/default": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_default",
    "$xeroxclient_button_color": "$xeroxclient_button_color_default",
    "$xeroxclient_button_hover_anims": [
      "@common_buttons.default_alpha",
      "@common_buttons.default_color"
    ],
    "$ignored_default_anims|default": true
  },

  "light_content_button/hover": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_hover",
    "$xeroxclient_button_color": "$xeroxclient_button_color_hover",
    "$xeroxclient_button_hover_anims": [
      "@common_buttons.hover_alpha",
      "@common_buttons.hover_color"
    ],
    "$ignored_hover_anims|default": true
  },

  "light_content_button/pressed": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_pressed",
    "$xeroxclient_button_color": "$xeroxclient_button_color_pressed"
  },

  "light_content_button/locked": {
    "$xeroxclient_button_alpha": "$xeroxclient_button_alpha_locked",
    "$xeroxclient_button_color": "$xeroxclient_button_color_locked"
  },

  "light_content_button": {
    "$button_hover_tip|default": false,
    "$button_hover_tip_text|default": "xc.tip.press2x",
    "$button_hover_tip_text_binding|default": [],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "hover_tip@xc_modern_container:classic_common.custom_hover_text": {
              "$hover_text": "$button_hover_tip_text",
              "$hover_text_bindings": "$button_hover_tip_text_binding",
              "ignored": "(not $button_hover_tip)"
            }
          }
        ]
      }
    ]
  }
}

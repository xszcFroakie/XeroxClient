  "hopper_screen": {
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_label": "redstone.hopper_label",
        "$top_half_size": ["100%sm", "27.2727272727%x"],
        "$title_text_anchor": "top_left",
        "$title_text_offset": ["3.9772727273%", "10.4166666667%"],
